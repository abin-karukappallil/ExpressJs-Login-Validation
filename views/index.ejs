<%-include("header")-%>
    <h2>Login system</h2>
   <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h2 class="text-center mb-4">Login</h2>
            <form action="/route/login" method="POST">
              <div class="form-group">
                <input name="email" type="text" class="form-control mb-5" placeholder="Username" required>
              </div>
              <div class="form-group">
                <input name="password" type="password" class="mb-5 form-control" placeholder="Password" required>
              </div>
              <button type="submit" class="btn btn-primary btn-block">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
    <%-include("footer")-%>
